  </div>
  <div class="field">
    <%= f.label :Mother %>
    <%= f.text_field :motname %>
  </div>
  <div class="field">
    <%= f.label :male %>
    <%= f.check_box :gender %>
  </div>
  <div class="field">
    <%= f.label :dob %>
    <%= f.date_select :dob %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :Pic %>
    <%= f.file_field :image %>
  </div>
