<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fatname</th>
      <th>Motname</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.fatname %></td>
        <td><%= profile.motname %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.dob %></td>
        <td><%= profile.email %></td>
        <td><%= profile.phone %></td>
        <td><%= image_tag profile.image.url , height: '100', width: '100' %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

